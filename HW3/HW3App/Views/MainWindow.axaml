<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HW3AvaloniaApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="HW3AvaloniaApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="HW3App">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Load from file..." Command = "{Binding LoadFromFile}"/>
                <MenuItem Header="Fibonacci Numbers (First 50)" Command = "{Binding Fibonacci}" >
                    <MenuItem.CommandParameter>
                        <sys:Int32>
                            50
                        </sys:Int32>
                    </MenuItem.CommandParameter>
                </MenuItem>
                <MenuItem Header="Fibonacci Numbers (First 100)" Command = "{Binding Fibonacci}" >
                    <MenuItem.CommandParameter>
                        <sys:Int32>
                            100
                        </sys:Int32>
                    </MenuItem.CommandParameter>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Save to file..." Command = "{Binding SaveToFile}"/>
            </MenuItem>
        </Menu>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBox Text="{Binding CurrentText}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </ScrollViewer>

        
    </DockPanel>
</Window>
